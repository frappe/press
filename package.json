{
	"name": "press",
	"private": true,
	"scripts": {
		"watch": "cd dashboard && yarn serve",
		"build": "NODE_ENV=production yarn run build-all",
		"build-all": "yarn run build-app && yarn run build-email-css && yarn run build-marketplace-css && yarn run fix-precache-manifest",
		"build-app": "cd dashboard && yarn build",
		"build-email-css": "yarn run postcss ./press/public/email/style.css -o ./press/public/css/email.css -c ./press/public/email/postcss.config.js",
		"build-marketplace-css": "yarn run postcss ./press/public/marketplace/style.css -o ./press/public/css/marketplace.css -c ./press/public/marketplace/postcss.config.js",
		"fix-precache-manifest": "npx replace-in-file /assets/press/dashboard/index.html /dashboard ./press/public/dashboard/precache-manifest.*.js",
		"postinstall": "cd dashboard && yarn install"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^2.1.0",
		"@tailwindcss/typography": "^0.2.0",
		"@tailwindcss/ui": "^0.5.0",
		"postcss-cli": "^7.1.0",
		"postcss-nested": "4.2.3",
		"tailwindcss": "^1.7.6"
	},
	"dependencies": {
		"libarchive.js": "^1.3.0"
	}
}
